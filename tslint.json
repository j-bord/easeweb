{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "max-line-length": [
      true,
      120
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "jsdoc-format": false,
    "no-consecutive-blank-lines": false,
    "no-console": [
      false
    ],
    "no-duplicate-variable": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "comment-format": [
      true,
      "check-space"
    ],
    "no-trailing-whitespace": false,
    "align": [
      false
    ],
    "eofline": false,
    "max-classes-per-file": [
      true,
      5
    ],
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single"
    ],
    "member-access": true,
    "no-conditional-assignment": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "no-var-requires": "off"
  }
}